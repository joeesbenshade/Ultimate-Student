<h1>List of stories</h1>

<%= link_to 'New story', new_story_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Details</th>
  </tr>
 
  <% @stories.each do |story| %>
    <tr>
      <td><%= story.title %></td>
      <td><%= truncate(story.details, length: 170, separator: ' ') %></td>
      <td><%= link_to 'Show', story_path(story) %></td>
      <td><%= link_to 'Edit', edit_story_path(story) %></td>   
      <td><%= link_to 'Destroy', story_path(story),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
